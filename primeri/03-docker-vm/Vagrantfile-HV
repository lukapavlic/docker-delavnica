Vagrant.configure("2") do |config|

  config.vm.box = "zozio/ubuntu22.04"

  config.vm.network "private_network", ip: "192.168.56.10"

  config.vm.synced_folder "C:/_GIT/docker-delavnica/primeri", "/home/vagrant/primeri",
    owner: "vagrant",
    group: "vagrant"

  config.vm.provider "hyperv" do |v|
    v.cpus = 2
    v.memory = 2048
  end

  config.vm.provision "shell", path: "setup.sh"
  
end
